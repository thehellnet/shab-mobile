<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/option_container"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/option_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/option_type"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/layout_map_type_satellite" />

        <Switch
            android:id="@+id/option_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/layout_map_auto" />

        <SeekBar
            android:id="@+id/option_auto_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/option_auto"
            android:layout_below="@+id/option_auto"
            android:max="23" />

    </RelativeLayout>

</RelativeLayout>
